@model List<GlenwoodMed.Model.ViewModels.ConsultationView>
@using GlenwoodMed.Service.RepositoryClass
@{
    DrugRespo respo = new DrugRespo();
}
<div class="modal-header ">
    Previous Consultation(s)
</div>
<div class="modal-body">

        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <table class="table table-striped table-bordered table-hover table-responsive">
                    <tr class="success">
                        <th>
                            Consultation Date
                        </th>
                        <th>
                            Notes
                        </th>
                        <th>
                            Illness
                        </th>
                        <th>
                            Drugs
                        </th>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.ConsultDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Notes)
                        </td>
                        <td>
                            @{
                                 foreach (var course in item.Illnesses)
                                 {
                                     @course.Illnessname
                                <br />


                                }
                            }
                        </td>
                        <td>
                            @{
                                foreach (var course in item.Custs)
                                {
                                    var find = respo.GetAll().Find(x => Convert.ToString(x.DrugId) == course.DrugId);
                        @course.DrugId

                                }
                                                }
                        </td>
                    </tr>

                </table>
            </div>
        }

        <hr />
    </div>
<div align ="center">
    <input type="button" id="btncancelconsult" value="Cancel" name="btncancelconsult"/>
</div>



