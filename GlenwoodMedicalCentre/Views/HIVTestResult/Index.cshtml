            autoOpen: false,
            resizable: false,
            width: 1090,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            open: function (event, ui) {
                $(".ui-dialog-titlebar-close").hide();
                $(this).load(url);
            }
        });

        $("#dialog-editdetails").dialog({
            title: 'Update HIV Details',
            autoOpen: false,
            resizable: false,
