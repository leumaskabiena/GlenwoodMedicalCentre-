@model IEnumerable<GlenwoodMed.Data.Tables.TestResult>
                      <style>
                          .x {
                              color: Blue;
                              font: bold;
                          }

                          .y {
                              font-family: 'Bell MT';
                              color: royalblue;
                              font-size: x-large;
                          }

                          .wid {
                              width: 50%;
                          }

                          .table-bordered {
                              border: thick;
                              color: blue;
                          }
                          table {
                              border: thick,thin;
                              color: blue;
                              background-color: lightgrey;
                          }
                          td{
                              color:black;
                          }
