@model IEnumerable<GlenwoodMed.Model.ViewModels.PatientModel>


@using (Ajax.BeginForm("SPatient", "Search", null, new AjaxOptions()
                                            {
                                                HttpMethod = "GET",
                                                UpdateTargetId = "Display",
                                                InsertionMode = InsertionMode.Replace
                                            }))
{
    <div align="center">
        @Html.TextBox("patientpar", "", new { @class = "form-control", @placeholder = "Enter Text Here" }) <br />
