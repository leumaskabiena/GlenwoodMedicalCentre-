@foreach (var notification in Html.Notifications().Current)
{
    <div class="nb-@notification.Status text-center NotificationBox" id="NotificationBox">@notification.Message</div>
}
<script language="javascript" type="text/javascript">
    //Used to display and close the system notifications
    $(document).ready(function () {
        $("#NotificationBox").fadeIn(1000);

       
        $("#NotificationBox").delay(3000).slideUp(2000).fadeOut(1000);
           // $("#NotificationBox").delay(5000).slideUp(1000);
        
    });
</script>
