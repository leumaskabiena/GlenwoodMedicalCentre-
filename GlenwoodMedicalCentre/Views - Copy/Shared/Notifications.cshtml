.nb-Warning
{
color: #c60;
    background: #ffc url('../../Content/images/warn.gif') no-repeat 8px 12px;
}
.NotificationBox
{
z-index: 1000;
padding: 12px 10px 10px 30px;
margin-top: 10px;
    box-shadow: 5px 5px 10px #000;
    display: none;
    width: 550px;
}

