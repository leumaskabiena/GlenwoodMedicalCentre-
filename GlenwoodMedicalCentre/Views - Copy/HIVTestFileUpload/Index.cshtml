@model GlenwoodMed.Data.Tables.HIVtestUpload

@{
    ViewBag.Title = "View Patient Files";
}

<link href="~/Content/ButtonColors.css" rel="stylesheet" />
<div class="text-center x">
    <h2><small>Upload Xray Result for </small>( @Model.patientName )</h2>
</div>
<center>
    <div class="row">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.PatientId)
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.LabelFor(x=>x.File,new { @class = "col-md-2 control-label" })
                    <div class="col-lg-7">
                        @Html.TextBoxFor(x=>x.File, new { type = "file", multiple = "true", @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.File)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-7">
                    <input type="submit" class="btn btn-primary" value="Upload"/>
                </div>
            </div>
        }
    </div>
</center>




