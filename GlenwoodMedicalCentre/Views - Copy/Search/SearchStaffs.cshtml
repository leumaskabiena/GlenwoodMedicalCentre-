@model IEnumerable<GlenwoodMed.Model.RegisterModel>
<script src="~/Scripts/TooTipScript.js"></script>
@using (Ajax.BeginForm("SearchStaffs", "Search", null, new AjaxOptions()
                                            {
                                                HttpMethod = "GET",
                                                UpdateTargetId = "Display",
                                                InsertionMode = InsertionMode.Replace
                                            }))
{
    <div align="center">
        @Html.TextBox("staffpar", "", new { @class = "form-control", @placeholder = "Enter Text Here" }) <br/>
        <input type="submit" name="searchstuff" value="Search" class="btn btn-success" />
    </div>
}
<br />
<table class="table table-striped table-bordered table-hover table-responsive">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NationalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.EmployerTelephone)
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NationalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EmployerTelephone)
            </td>



            <td>
                @Html.ActionLink(" ", "EditProfile", "MyAccount", new { id = item.userId }, new { title = "Edit "+item.FullName+" "+item.Surname+"'s Details", @class = "lnkEdit btn btn-default glyphicon glyphicon-edit edit view" })
            </td>
        </tr>
    }

</table>
