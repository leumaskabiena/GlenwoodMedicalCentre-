@model GlenwoodMed.Model.ViewModels.timeBooked

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddTimeToBooking</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.LabelFor(model => model.time, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("time", null, "--Select Time--", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Index","Booking")';return false;">Cancel</button> &nbsp; &nbsp;
                 
                </div>
                <div class="col-md-offset-2 col-md-10">
                    @*<a href="@Url.Action("AddTimeToBooking", "Booking", new { id = model.id })" class="btn btn-primary btn-lg"> Time </a>*@
                </div>
            </div>
        </div>
    }
</body>
</html>
